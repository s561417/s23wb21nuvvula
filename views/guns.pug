extends layout

block content
  h1= title
  - var results = [{guns_color:"Black",guns_range:"600",guns_cost:"$1800"},{guns_color:"brown",guns_range:"700",guns_cost:"$2500"},{guns_color:"gray",guns_range:"500",guns_cost:"$2200"}]
  div(class="container-fluid")
    div(class="row")
      each item in results
        div(class="col-sm-2",onClick=`buy(${index})`)
          p Color is #{item.guns_color}
          p Range is #{item.guns_range}
          p Cost is #{item.guns_cost}

          //- Bonus Logic
  script.
    function buy(itr) {
      itr = itr+1;
      alert(`You Purchased Item ${itr}`);
    }

  